/* Below code takes in values for 2 variables A & B and prints it back to standard output */
#include "pch.h" 
#include <iostream>

int main() {
	int a{}; // value initialization ( A = 0 ) 
	int b{}; // value initialization ( B = 0 )  

	std::cout << "Please input the value of A and B one after another below \n";

	std::cin >> a >> b;

	std::cout << "A: " << a << " B: " << b << '\n';

	return 0;
}